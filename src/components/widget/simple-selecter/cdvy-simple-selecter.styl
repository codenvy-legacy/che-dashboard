$cdvy-simple-selecter-color = $label-info-color

.cdvy-simple-selecter
  height 90px
  width 260px
  border-color $form-element-border-color
  background-color $background-color
  border-width 2px
  border-style solid
  codenvy-border-radius(3px)
  -webkit-box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)
  padding-top 16px
  margin-left 16px
  margin-right 16px

  &:hover
    background-color $cdvy-simple-selecter-color
    color $background-color

.cdvy-simple-selecter .title
  position relative
  border 1px solid $cdvy-simple-selecter-color
  border-right none
  border-left none
  line-height 22px

.cdvy-simple-selecter:hover .title
  border-color $background-color

.cdvy-simple-selecter .title:before
  position absolute
  border-top 24px solid transparent
  border-right 24px solid $cdvy-simple-selecter-color
  content ""
  left -24px
  bottom -1px

.cdvy-simple-selecter:hover .title:before
  border-right-color $background-color

.cdvy-simple-selecter .title:after
  position absolute
  border-top 23px solid transparent
  border-right 23px solid $background-color
  content ""
  left -22px
  bottom 0px

.cdvy-simple-selecter:hover .title:after
  border-right-color $cdvy-simple-selecter-color

.cdvy-simple-selecter md-icon
  font-size 24px
  text-align center
  margin-right 22px
  padding 0px
  height 24px
  width 24px

.cdvy-simple-selecter .title
  font-size 12px
  line-height 22px
  text-align center
  text-transform uppercase

.cdvy-simple-selecter .description, .cdvy-simple-selecter-active .description
  padding 5px 10px
  font-size 12px
  color $label-primary-color

.cdvy-simple-selecter-active
  border-color $primary-color
  color $primary-color

  &:hover
    background-color $background-color


.cdvy-simple-selecter-active .title, .cdvy-simple-selecter-active:hover .title
  background-color $primary-color
  color $background-color
  border-color $primary-color
  font-weight bold

.cdvy-simple-selecter-active .title:before, .cdvy-simple-selecter-active:hover .title:before
  border-right-color $primary-color

.cdvy-simple-selecter-active .title:after, .cdvy-simple-selecter-active:hover .title:after
  border-right-color $primary-color

.cdvy-simple-selecter-active:hover md-icon
  color $primary-color

.cdvy-simple-selecter-active md-icon
  color $primary-color

cdvy-simple-selecter md-card:focus
  outline none

cdvy-simple-selecter
  outline none
